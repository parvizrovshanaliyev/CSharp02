@model Blog.Entities.Dtos.Auth.LoginDto

@{
    Layout = "_LoginLayout";
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Login</h3>
                </div>
                <div class="card-body">
                    <form id="form" asp-action="Login">
                        <div asp-validation-summary="All" id="validationSummary" class="text-danger"></div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Email">Email</label>
                            <input class="form-control py-4" asp-for="Email" type="email" placeholder="Enter email address"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Password">Password</label>
                            <input class="form-control py-4" asp-for="Password" type="password" placeholder="Enter password"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" asp-for="RememberMe" type="checkbox"/>
                                <label class="custom-control-label" asp-for="RememberMe">Remember me</label>
                            </div>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button class="btn btn-primary" type="submit"><span class="fas fa-sign-in-alt"></span> Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>