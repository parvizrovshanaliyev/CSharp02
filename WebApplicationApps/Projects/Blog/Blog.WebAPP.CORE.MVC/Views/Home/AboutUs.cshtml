@model Blog.Entities.Concrete.AboutUsPageInfo;

@{
    Layout = "_AboutLayout";
    ViewBag.Title = "About Us";
    ViewBag.Description = Model.SeoDescription;
    ViewBag.Tags = Model.SeoTags;
    ViewBag.Author = Model.SeoAuthor;
}

<div class="container-fluid">
    <div class="jumbotron mt-4">
        <div class="d-flex align-items-center h-100">
            <div class="container text-center py-5">
                <!-- image -->
                <img src="@Url.Content("~/images/about-us.jpg")" class="img-fluid" alt="about us" />
                <div class="container mt-4 mb-5">
                    <h2 class="text-center py-3 mb-5">
                        @Model.Header
                    </h2>
                    <div class="text-center">
                        <p>@Model.Content</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>